
@model  blogMarcelo.Web.Models.Usuario.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "Editar Usuario";
}
@using (@Html.BeginForm())
{
    <h2>Editar Usuário</h2>

    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(x => x.id)
        @Html.TextBoxFor(x => x.id, new { @class = "form-control", @disabled = "disabled" })
        @Html.ValidationMessageFor(x => x.id)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Senha)
        @Html.PasswordFor(x => x.Senha, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Senha)

    </div>

    <p>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </p>
}